rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Clothes images - users can only upload/delete their own
    match /clothes/{userId}/{fileName} {
      // Anyone can read (for sharing closets)
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

